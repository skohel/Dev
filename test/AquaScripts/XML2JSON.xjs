function openTextFile(file){
    this.file = file ;
    var reader= aqua.io.newTextReader();
    reader.setFile(file);
    
    this.getRow = function(){
       var row;
       var list = [];

       row = reader.readNextRow();
       
       while(row != null){
           list.push(row);
           row = reader.readNextRow();
       }
       return list;
    };

    this.close = function(){
        reader.close();
    };
}

